<%- include("partials/header") %>

<% if (products){ %>
<div class="row">
	<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
		<ul class="list-group">
			<% products.forEach(function(products){ %>
				<li class="list-group-item">
					<span class="badge"> <%= products.qty %></span>
					<span class="label label-success"> <%= products.price %></span>
					<strong> <%= products.item.name %></strong>
					<div class="dropdown">
						<button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
						<div class="dropdown-menu">
							 <a class="dropdown-item" href="/reduce/<%= products.item._id %>">Reduce by 1</a>
							 <a class="dropdown-item" href="/remove/<% products.item._id %>">Remove all</a>
						</div>
					</div>
				</li>
	<% }) %>
		</ul>
	</div>
	<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
		<strong>Total: <%= totalPrice %> </strong>
	</div>
</div>
<hr>
 <div>

	<div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>

<% } %>

<% if (!products) { %>
<div>
	<h2>
		No Items in Cart
	</h2>
</div>
<% } %>
<br><br><br><br><br><br><br><br><br><br><br><br>

<%- include("partials/footer") %>
