<%- include("../partials/header"); %>


<header class="jumbotron container" style="">
	<div >
	
	<% if(currentUser && currentUser.isAdmin){ %>
	<h1 style="color:pink;font-size:100px;">
		Welcome Admin
	</h1>
		<br><br><br><br><br><br><br><br><br><br><br><br><br>
	<div class="center" style="margin: 0;position: absolute;top: 50%;left: 50%;-ms-transform: translate(-50%, -50%);transform: translate(-50%, -50%);">
		<a class="btn btn-default btn-large" href="/products/new" style="text-align:center">Add products</a>	
	</div>

 <% } %>
	<% if(!currentUser || !currentUser.isAdmin) { %>
	<h1 style="color:pink;font-size:100px;">
	Lead with Speed
	</h1>
		<br><br><br><br><br><br><br><br><br><br><br><br><br>
	<p class="center" style="color:black;margin: 0;position: absolute;top: 50%;left: 50%;-ms-transform: translate(-50%, -50%);transform: translate(-50%, -50%);">
		Get the best deals on best products  
	</p>
	<% } %>	
	</div>
		
</header>




<br>
<!-- style="display: flex; flex-wrap: wrap -->
<div class="row" style="padding: 0% 5% 0% 5%;display: flex; flex-wrap: wrap ;">
<% products.forEach(function(products){ %>
		<div class="col-xs-6" style="text-align:center">
			<a href="/products/<%= products.id %>" class="thumbnail">
			<img src= "<%= products.image %>">
			</a>
			<a href="/add-to-cart/<%= products.id %>">Add to shopping cart</a>
			<h3>
			<%= products.name %>
		</h3>
		</div>

<% }); %>
</div>

<%- include("../partials/footer"); %>